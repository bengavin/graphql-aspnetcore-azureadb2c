<i class="fas fa-@IconName @Size @Class"></i>

@code {
    [Parameter]
    public string IconName { get; set; }

    [Parameter]
    public string IconSize { get; set; } = string.Empty;

    [Parameter]
    public string Class { get; set; } = string.Empty;

    private string Size => string.IsNullOrWhiteSpace(IconSize) ? string.Empty : $"fa-{IconSize}";
}