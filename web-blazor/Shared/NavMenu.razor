<nav class="py-1 navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" href="/">Star Wars Demo</a>
    <button class="navbar-toggler collapsed" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="d-flex flex-row justify-content-between navbar-collapse collapse">
        <AuthorizeView>
            <Authorized>
                <div class="ml-auto navbar-nav">
                    <div class="nav-item">
                        <NavLink class="nav-link" href="characters">
                            <span class="fas fa-user" aria-hidden="true"></span> Characters
                        </NavLink>
                    </div>
                </div>
                <div role="group" class="btn-group me-2">
                    <span class="me-2 align-self-center text-light">Hello, @context.User.Identity.Name!</span>
                    <a href="MicrosoftIdentity/Account/EditProfile" class="btn btn-primary me-1">
                        <i class="fas fa-edit mx-1"></i>
                        Edit Profile
                    </a>
                    <a href="Identity/Account/SignOut" class="btn btn-danger">
                        <i class="fas fa-sign-out-alt mx-1"></i>
                        Log out
                    </a>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="ml-auto navbar-nav">
                    <a href="MicrosoftIdentity/Account/SignIn" class="btn btn-success">
                        <i class="fas fa-sign-in-alt mx-1"></i>
                        Log in
                    </a>
                </div>
            </NotAuthorized>
        </AuthorizeView>        
    </div>
</nav>


@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
